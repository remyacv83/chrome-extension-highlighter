{
  "manifest_version": 3,
  "name": "Replit Highlighter",
  "version": "1.0",
  "description": "Highlight and save text locally",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": []
  }],
  "host_permissions": ["<all_urls>"]
}
